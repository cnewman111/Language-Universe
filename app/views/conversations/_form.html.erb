<%= form_with(model: conversation, url: prompt_conversations_path) do |form| %>
  <% if conversation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(conversation.errors.count, "error") %> prohibited this conversation from being saved:</h2>

      <ul>
        <% conversation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :training_language, style: "display: block" %>
    <%= form.select :training_language, Conversation::LANGUAGES%>
  </div>

  <div>
    <%= form.label :native_language, style: "display: block" %>
