<%= render @prompt %>

<div>
  <% if user_can_modify(@prompt) %>
    <%= link_to "Edit this prompt", edit_prompt_path(@prompt) %> 
    <%= button_to "Destroy this prompt", @prompt, method: :delete %>
  <% end %>
  <%= link_to "Back to prompts", prompts_path %> |
  <%= link_to "Start a conversation with this prompt", new_prompt_conversation_path(@prompt) %>


</div>
