<%= render 'navbar' %>

<div class="backgroundContainer">

  <div class="container d-flex justify-content-center align-items-center">
    <div class="jumbotron formJumbotron">
      <h1 class="display-4">New Prompt</h1>

      <%= render "form", prompt: @prompt %>
      <p> Note: Submiting changes will terminate all associated conversations </p>
      <hr class="my-4">
      <%= link_to "Back to Prompts", prompts_path, class: "btn btn-outline-dark mx-1" %>
      <div class="btn-group">
        <%= button_to "Delete Prompt", prompt_path(@prompt), method: :delete, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>


</div>