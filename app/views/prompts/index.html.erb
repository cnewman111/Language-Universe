<p style="color: green"><%= notice %></p>

<h1>Prompts</h1>

<div id="prompts">
  <% @prompts.each do |prompt| %>
    <%= render prompt %>
    <p>
      <%= link_to "Show this prompt", prompt %> 
      <%= link_to "Start a conversation with this prompt", new_prompt_conversation_path(prompt) %>
    </p>
  <% end %>
</div>

<%= link_to "New prompt", new_prompt_path %>
