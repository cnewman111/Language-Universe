<%= form_with(model: prompt) do |form| %>
  <% if prompt.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(prompt.errors.count, "error") %> prohibited this prompt from being saved:</h2>

      <ul>
        <% prompt.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :ai_name, style: "display: block" %>
    <%= form.text_field :ai_name %>
  </div>

  <div>
    <%= form.label :setting, style: "display: block" %>
    <%= form.text_area :setting %>
  </div>

  <div>
    <%= form.label :training_language, style: "display: block" %>
    <%= form.text_field :training_language %>
  </div>

  <div>
    <%= form.label :native_language, style: "display: block" %>
    <%= form.text_field :native_language %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id %>
  </div>

  <div>
    <%= form.label :visible_to_all, style: "display: block" %>
    <%= form.check_box :visible_to_all %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
